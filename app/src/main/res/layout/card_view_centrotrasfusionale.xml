<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="fill_parent"
    android:layout_height="140dp"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    android:layout_marginStart="20dp">

    <LinearLayout
        android:id="@+id/cardBackground"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/struttura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/centro_trasfusionale"
            android:textStyle="italic|bold"
            android:textSize="18sp"
            android:layout_marginStart="5dp"/>


           <TextView
                android:id="@+id/localita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/centro_trasfusionale_ciita"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"/>

             <TextView
                 android:layout_marginTop="5dp"
                 android:layout_marginStart="20dp"
                 android:id="@+id/indirizzo"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/centro_trasfusionale_via"
                 android:gravity="center_vertical"
                 android:textSize="16sp" />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/telefono"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/centro_trasfusionale_telefono"
                    android:gravity="center_vertical"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/fax"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/centro_trasfusionale_fax"
                    android:textSize="16sp" />

            </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>