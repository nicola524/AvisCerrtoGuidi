<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="fill_parent"
    android:layout_height="140dp"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:id="@+id/cardBackground"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/struttura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:text="Simt Ospedle Careggi"
            android:textStyle="italic|bold"
            android:textSize="18dp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginLeft="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/localita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Firenze"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:layout_below="@+id/struttura"
                    android:layout_marginTop="10dp" />

                 <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/indirizzo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lagrgo G.a Brambilla, 3"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:layout_below="@+id/localita"
                        />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/telefono"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+39 055 411030"
                android:gravity="center_vertical"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/fax"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+39 055 588798"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>