<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context="it.nicolabrogelli.aviscerrtoguidi.fragment.ManualeDonatoreFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <Button
                android:id="@+id/Button_donare"
                android:layout_gravity="center_horizontal|top"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/button_height"
                android:text="@string/donazione_perche_donare"
                android:background="@drawable/button_selector" />

            <Button
                android:id="@+id/Button_chipuodonare"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal|top"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/button_height"
                android:text="@string/donazione_chi_puo_donare"
                android:background="@drawable/button_selector" />

            <Button
                android:id="@+id/Button_idonieta"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal|top"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/button_height"
                android:text="@string/donazione_idoneita"
                android:background="@drawable/button_selector" />

            <Button
                android:id="@+id/Button_comedonare"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal|top"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/button_height"
                android:text="@string/donazione_come_donare"
                android:background="@drawable/button_selector" />

            <Button
                android:id="@+id/Button_primadiunadonazone"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal|top"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/button_height"
                android:text="@string/donazione_prima_di_donare"
                android:background="@drawable/button_selector" />

            <Button
                android:id="@+id/Button_tipididonazione"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal|top"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/button_height"
                android:text="@string/donazione_tipologie"
                android:background="@drawable/button_selector" />

            <Button
                android:id="@+id/Button_ilsangue"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal|top"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/button_height"
                android:text="@string/donazione_il_sangue"
                android:background="@drawable/button_selector" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
