<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    tools:context="it.nicolabrogelli.aviscerrtoguidi.fragment.uistatiche.ChiPuoDonareFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <!-- CINTENITORE GENERALE -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFFFFF">

                <TextView
                    android:paddingLeft="15dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="Chi può donare" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/nliveo_blue_colorPrimary">

                <TextView
                    android:paddingTop="30dp"
                    android:paddingBottom="20dp"
                    android:paddingLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="Età donatore"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:paddingLeft="40dp"
                    android:layout_marginBottom="30dp"
                    android:paddingRight="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:text="Compresa tra i 18 ed i 60 anni per la prima donazione. Chi è già donatore può superare il limite dei 65 anni in relazione ovviamente allo stato di"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="left" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF">

                <TextView
                    android:paddingTop="30dp"
                    android:paddingBottom="20dp"
                    android:paddingLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="Condizioni fisiche"/>

                <TextView
                    android:paddingLeft="40dp"
                    android:layout_marginBottom="30dp"
                    android:paddingRight="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:text="Peso: Più di 50Kg"
                    android:layout_gravity="left" />

                <TextView
                    android:paddingLeft="40dp"
                    android:layout_marginBottom="30dp"
                    android:paddingRight="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:text="Pulsazioni: comprese tra 50-80, comunque sistolica (o massima) tra 110 e 180 mm e distolica (o minima) tra 60 e 100 mm di mercurio"
                    android:layout_gravity="left" />

                <TextView
                    android:paddingLeft="40dp"
                    android:layout_marginBottom="30dp"
                    android:paddingRight="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:text="Stato di salute: sentirsi bene e svolgere normali attività e non avere alcune malattie quali diabete, malattie cardiovascolari importanti, anemia."
                    android:layout_gravity="left" />

                <TextView
                    android:paddingLeft="40dp"
                    android:layout_marginBottom="30dp"
                    android:paddingRight="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:text="Stile di vita: avere uno stile di vita che escluda comportamenti a rischio (ad esempio l'uso di sostanze stupefacenti e comportamenti a rischio di malattie sessualmente trasmissibili)."
                    android:layout_gravity="left" />

            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</FrameLayout>
