<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#EDEDED"
    tools:context="it.nicolabrogelli.aviscerrtoguidi.controller.MainActivity">

    <ScrollView
        android:paddingTop="30dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/contenitore"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:baselineAligned="true">

                <!-- A+ e A- -->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativelayoutAPAM">

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:id="@+id/imageViewAP"
                        android:src="@drawable/stabile"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="68dp"
                        android:contentDescription="@string/content_image_description"/>

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:id="@+id/imageViewAM"
                        android:src="@drawable/stabile"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="@string/content_image_description"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ap"
                        android:layout_alignBottom="@+id/imageViewAP"
                        android:layout_alignParentStart="true"
                        android:contentDescription="@string/content_image_description"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/a"
                        android:id="@+id/imageView3"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/imageViewAM"
                        android:contentDescription="@string/content_image_description"/>


                </RelativeLayout>

                <!-- B+ e B- -->
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:id="@+id/relativelayoutBPBM">


                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:id="@+id/imageViewBP"
                        android:src="@drawable/stabile"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/imageView7"
                        android:contentDescription="@string/content_image_description"/>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bp"
                        android:layout_alignBottom="@+id/imageViewBP"
                        android:layout_alignParentStart="true"
                        android:id="@+id/imageView7"
                        android:contentDescription="@string/content_image_description"/>



                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/b"
                        android:id="@+id/imageView4"
                        android:layout_alignBottom="@+id/imageViewBM"
                        android:layout_toStartOf="@+id/imageViewBM"
                        android:contentDescription="@string/content_image_description"/>

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:id="@+id/imageViewBM"
                        android:src="@drawable/stabile"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="@string/content_image_description"/>

                </RelativeLayout>

                <!-- 0+ e 0- -->
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:id="@+id/relativelayout0P0M">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/z"
                        android:id="@+id/imageView5"
                        android:layout_alignBottom="@+id/imageView0M"
                        android:layout_toStartOf="@+id/imageView0M"
                        android:contentDescription="@string/content_image_description"/>

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:id="@+id/imageView0P"
                        android:src="@drawable/stabile"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/imageView6"
                        android:contentDescription="@string/content_image_description"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/zp"
                        android:id="@+id/imageView6"
                        android:layout_alignBottom="@+id/imageView0P"
                        android:layout_alignParentStart="true"
                        android:contentDescription="@string/content_image_description"/>


                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:id="@+id/imageView0M"
                        android:src="@drawable/stabile"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="@string/content_image_description"/>

                </RelativeLayout>

                <!-- AB+ e AB- -->
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:id="@+id/relativelayoutABPABM">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ab"
                        android:id="@+id/imageView2"
                        android:layout_alignBottom="@+id/imageViewABP"
                        android:layout_toStartOf="@+id/imageViewABM"
                        android:contentDescription="@string/content_image_description"/>


                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:id="@+id/imageViewABM"
                        android:src="@drawable/stabile"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="@string/content_image_description"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/abp"
                        android:id="@+id/imageView"
                        android:layout_alignBottom="@+id/imageViewABP"
                        android:layout_alignParentStart="true"
                        android:contentDescription="@string/content_image_description"/>

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:id="@+id/imageViewABP"
                        android:src="@drawable/stabile"
                        android:contentDescription="@string/content_image_description"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/imageView" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:id="@+id/progressBar_meteo"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:id="@+id/textViewAggiornamento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text=""
                        android:textSize="13sp"
                        android:layout_marginBottom="61dp"
                        />

                </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
